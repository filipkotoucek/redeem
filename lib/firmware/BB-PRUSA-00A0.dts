/dts-v1/;
/plugin/;

/ {
    compatible = "ti,beaglebone", "ti,beaglebone-black";

    /* identification */
    part-number = "BB-PRUSA";
    version = "00A0";

    /* state the resources this cape uses */
    exclusive-use =
        /* the pin header P8 uses TODO: match used signals*/
        //"P8.8",  /* FAULT_EXT_2	*/
        "P8.9",  /* FAULT_Y 	*/
        "P8.10", /* FAULT_X 	*/
        "P8.12", /* STEP_Y      */
        "P8.13", /* STEP_Z      */
        "P8.14", /* DIR_Z       */
        "P8.15", /* DIR_E 	*/
        "P8.17", /* STEP_X      */
        "P8.18", /* FAULT_E	*/
        "P8.19", /* DIR_Y       */
        "P8.26", /* DIR_X       */
        
        /* the pin header P9 uses */
        "P9.12", /* STEP_E 	*/
        "P9.13", /* END_STOP_Z1	*/
        "P9.17", // SPI0_CS0
        "P9.18", // SPI0_D1 MISO
        "P9.21", // SPI0_D0 MOSI
        "P9.22", // SPI0_CLK
        "P9.23", /* END_STOP_Y1 */
        "P9.24", /* FAULT_Z     */
        "P9.25", /* END_STOP_X1	*/
        "P9.33", /* AIN4        */
        "P9.35", /* AIN6        */
        "P9.37", /* AIN2        */
        "P9.41", /* ENABLE_PWM  */
        "P9.42"; // Z-STEP

    fragment@0 {
        target = <&am33xx_pinmux>;
        __overlay__ {
            spi0_pins: spi0_pins {
        	pinctrl-single,pins = <
        	        //all set to input due to recomendation at TI forum
            		0x150 0x30  // (A17) spi0_sclk.spi0_sclk
            		0x154 0x30  // (B17) spi0_d0.spi0_d0 MOSI
            		0x158 0x30  // (B16) spi0_d1.spi0_d1 MISO
            		0x15c 0x30  // (A16) spi0_cs0.spi0_cs0
            		//spi0_cs1 used by mmc0_cd 
            		//0x160 ( PIN_OUTPUT | MUX_MODE0 ) // (C15) spi0_cs1.spi0_cs1
        	>;
    	    };					
            pruicss_stepper_pins: pinmux_pruicss_stepper_pins{
                pinctrl-single,pins = <         
                    0x190 0x07  // X-STEP   P9_31   GPIO3_14
                    0x194 0x07  // X-DIR    P9_29   GPIO3_15

                    0x198 0x07  // Y-STEP   P9_30   GPIO3_16
                    0x19c 0x07  // Y-DIR    P9_28   GPIO3_17

                    0x1a0 0x07  // Z-STEP   P9_42   GPIO3_18
                    0x1a4 0x07  // Z-DIR    P9_27   GPIO3_19

                    0x030 0x07  // E0-STEP  P8_12   GPIO1_12
                    0x034 0x07  // E0-DIR   P8_11   GPIO1_13   
                >;
            };		

            stepper_fault_pins: pinmux_stepper_fault_pins{
                pinctrl-single,pins = <
                    0x094 0x37 // P8_8  = FAULT H = GPIO2_3
                    0x09C 0x37 // P8_9  = FAYLT Y = GPIO2_5
                    0x098 0x37 // P8_10 = FAULT X = GPIO2_4
                    //0x08C 0x37 // P8_18 = FAULT E = GPIO2_1
                >;
            };

            end_stop_pins: pinmux_end_stop_pins{
                pinctrl-single,pins = <
                    0x180 0x37 // P9_26 = End stop X1  = GPIO0_14
                    //0x070 0x37 // P9_11 = End stop X2  = GPIO0_30
                    
                    0x044 0x37 // P9_23 = End stop Y1  = GPIO1_17
                    //0x034 0x37 // P8_11 = End stop Y2  = GPIO1_13
                    
                    0x074 0x37 // P9_13 = End stop Z1  = GPIO0_31
                    //0x038 0x37 // P8_16 = End stop Z2  = GPIO1_14   
                >;
            };
            //dallas_w1_pins: pinmux_dallas_w1_pins {
            //  pinctrl-single,pins = <
            //      0x150 0x37	// Dallas 1W
            //  >;
            //};

            //clkout2_pin: pinmux_clkout2_pin {
            //  pinctrl-single,pins = <
            //      0x1b4 0x37	/* xdma_event_intr1.clkout2 */
            //	>;
            //};
            
            ehrpwm1_pins: ehrpwm1_pins_default {
                pinctrl-single,pins = <
                    0x48 0x06 /* (U14) ( PIN_OUTPUT | MUX_MODE6 )gpmc_a2.ehrpwm1A P9_14 = HEAT_0 = GPIO1_18 */
                    0x4c 0x06 /* (T14) ( PIN_OUTPUT | MUX_MODE6 )gpmc_a3.ehrpwm1B P9_16 = BED-HEAT = GPIO1_19 */
                >;
            };
            
            ehrpwm2_pins: ehrpwm2_pins_default {
                pinctrl-single,pins = <
                    0x20 0x04 /* (U10) ( PIN_OUTPUT | MUX_MODE4 )gpmc_ad8.ehrpwm2A */
                    0x24 0x04 /* (T10) ( PIN_OUTPUT | MUX_MODE4 )gpmc_ad9.ehrpwm2B */
                >;
            };
            
            stepper_enable_pins: pinmux_stepper_enable_pins {
                pinctrl-single,pins = <         
                    0x040 0x07  // P9_15      = DRV_EN       = GPIO1_16
                    0x164 0x2F  // P9_42A   avoid conflict  GPIO0_7
                >;
            };

            
        };
    };

    fragment@1 {
        target = <&spi0>;
        __overlay__ {
            /*
            #address-cells 	= <1>;
            #size-cells 	= <0>;
            status		= "okay";
            pinctrl-names	= "default";
            pinctrl-0		= <&spi0_pins>;	
            cs-gpios 		= <&gpio0 5 0>;

            stepper_control{
                #address-cells 	  = <1>;
                #size-cells 	  = <0>;
                compatible 	  = "spidev";
                reg 		  = <1>;
                spi-max-frequency = <16000000>;
            };
            */
            #address-cells  = <1>;
            #size-cells     = <0>;
            status = "okay";
            pinctrl-names = "default";
            pinctrl-0 = <&spi0_pins>;
            ti,pindir-d0-out-d1-in;

            stepper_control{
                #address-cells    = <1>;
                #size-cells       = <0>;
                compatible    = "spidev";
                reg           = <0>;
                // SPI mode 3
                spi-cpol;
                spi-cpha;
                spi-max-frequency = <400000>;
            };
        };
    };

    fragment@2{
        target = <&pruss>;
        __overlay__{
            status = "okay";
            pinctrl-names = "default";
            pinctrl-0 	  = <&pruicss_stepper_pins>;

            stepper_x{
                pin-names 	= "Redeem:X-STEP", "Redeem:X-DIR";		
                gpios 		= <&gpio3 14 0 &gpio3 15 0>; 
            };
            stepper_y{
                pin-names 	= "Redeem:Y-STEP", "Redeem:Y-DIR";		
                gpios 		= <&gpio3 16 0 &gpio3 17 0>; 
            };
            stepper_z{
                pin-names 	= "Redeem:Z-STEP", "Replic:Z-DIR";		
                gpios       = <&gpio3 18 0 &gpio3 19 0>; 
            };
            stepper_ext_1{
                pin-names 	= "Redeem:E0-STEP", "Redeem:E0-DIR";		
                gpios 		= <&gpio1 12 0 &gpio1 13 0>; 
            };                  
            /*
            stepper_ext_2{
                pin-names 	= "Replic:pru-step_ext_2", "Replic:pru-dir_ext_2";		
                gpios 		= <&gpio1 13 0 &gpio1 14 0>; 
            };
            */
        };
    };

    fragment@3 {
        target = <&ocp>;
        __overlay__ {			
            #address-cells = <1>;
            #size-cells = <1>;							

            gpio_keys {
                compatible = "gpio-keys";
                pinctrl-names = "default";
                pinctrl-0 = <&end_stop_pins>;
                pinctrl-1 = <&stepper_fault_pins>;
                #address-cells = <1>;
                #size-cells = <0>;

                switch_x1 {
                    label               = "Replic:End-stop-X1";
                    debounce_interval   = <50>;
                    linux,code          = <112>;
                    //gpios               = <&gpio3 21 0x5>;
                    gpios               = <&gpio0 14 0x5>;
                    gpio-key,wakeup;
                };				
                switch_y1 {
                    label               = "Replic:End-stop-Y1";
                    debounce_interval   = <50>;
                    linux,code          = <114>;
                    gpios               = <&gpio1 17 0x5>;
                    gpio-key,wakeup;
                };			
                switch_z1 {
                    label               = "Replic:End-stop-Z1";
                    debounce_interval   = <50>;
                    linux,code          = <116>;
                    gpios               = <&gpio0 31 0x5>;
                    gpio-key,wakeup;
                };				
                
                fault_x {
                    label               = "Replic:Fault-X";
                    debounce_interval   = <50>;
                    linux,code          = <90>;
                    gpios               = <&gpio2 4 0x5>;
                    gpio-key,wakeup;	
                };
                fault_y {
                    label               = "Replic:Fault-Y";
                    debounce_interval   = <50>;
                    linux,code          = <91>;
                    gpios               = <&gpio2 5 0x5>;
                    gpio-key,wakeup;	
                };
                fault_z {
                    label               = "Replic:Fault-Z";
                    debounce_interval   = <50>;
                    linux,code          = <92>;
                    gpios               = <&gpio0 15 0x5>;
                    gpio-key,wakeup;	
                };
                /*
                fault_e {
                    label               = "Replic:Fault-E";
                    debounce_interval   = <50>;
                    linux,code          = <93>;
                    gpios               = <&gpio2 1 0x5>;
                    gpio-key,wakeup;	
                };
                
                fault_h {
                    label               = "Replic:Fault-H";
                    debounce_interval   = <50>;
                    linux,code          = <94>;
                    gpios               = <&gpio2 3 0x5>;
                    gpio-key,wakeup;	
                };
                */
            };
            //onewire {
            //   compatible      = "w1-gpio";
            //   pinctrl-names   = "default";
            //   pinctrl-0       = <&dallas_w1_pins>;
            //   status          = "okay";
            //   gpios           = <&gpio0 2 0>;
            //};

            //pwm_enable {
            //	compatible      = "bone-pinmux-helper";
            //  status 	        = "okay";
            //	pinctrl-names   = "default";
            //	pinctrl-0       = <&servo_pins>;
            //	/*pinctrl-0       = <&clkout2_pins>;*/
            //};
            steppers_enable {
                compatible      = "bone-pinmux-helper";
                status          = "okay";
                pinctrl-names   = "default";
                pinctrl-0       = <&stepper_enable_pins>;
            };
            steppers_pru {
                compatible      = "bone-pinmux-helper";
                status          = "okay";
                pinctrl-names   = "default";
                pinctrl-0       = <&pruicss_stepper_pins>;
            };
        };
    };

    fragment@4 {
        target = <&tscadc>;
        __overlay__ {			
            status = "okay";
            adc {
                ti,adc-channels = <2 4 6>;
                //channel 2 - THERM2 (heatbed)
                //channel 4 - THERM0 (extruder)
                //channel 6 - Z-THERM (pinda)
              
            };
        };
    };
    
    fragment@5 {
        target = <&epwmss1>;
        __overlay__ {
            status = "okay";
        };
    };
     
    fragment@6 {
        target = <&ehrpwm1>;
        __overlay__ {
            status = "okay";
            pinctrl-names = "default";
            pinctrl-0 = <&ehrpwm1_pins>;
        };
    };
    
    fragment@7 {
        target = <&epwmss2>;
        __overlay__ {
            status = "okay";
        };
    };

    fragment@8 {
        target = <&ehrpwm2>;
        __overlay__ {
            status = "okay";
            pinctrl-names = "default";
            pinctrl-0 = <&ehrpwm2_pins>;
        };
    };
    
};
